datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id      Int    @id @default(autoincrement())
  name    String
  surname String
  bugs    Bug[]
}

model Bug {
  id           Int       @id @default(autoincrement())
  description  String?
  project      Project   @relation(fields: [projectId], references: [id])
  projectId    Int       @unique
  creationDate DateTime? @default(now())
  user         User      @relation(fields: [userId], references: [id])
  userId       Int       @unique
}

model Project {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  bugs        Bug[]
}
